<h1>Add a New Post</h1>

<%= form_for([@place, @place.posts.build]) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.label :posted_on %><br>
  <%= f.date_select :posted_on %><br>
  <%= f.submit %>
<% end %>
